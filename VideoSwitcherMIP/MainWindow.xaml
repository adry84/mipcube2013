<Window x:Class="VideoSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"  Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid Background="Azure" Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Angular Video Player" FontSize="25" Grid.Row="0" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0" Width="350"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <!-- <Button Content="Pick Vedio" Height="50" Width="250" FontSize="25" Margin="50,0,0,0" /> Click="Pick_Click"-->
           <!-- <MediaElement x:Name="Media" Width="462" Height="250" Margin="50,1,0,0"  />-->
            <MediaElement Name="Me" HorizontalAlignment="Center"
                      Width="562" Height="250"  Margin="0,1,0,0"     />

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button Content="Play" FontSize="20" Height="40" Width="110" Margin="10,50,0,0" /> <!--Click="Play_click"-->
            <Button Content="Pause" FontSize="20" Height="40" Width="110" Margin="50,50,0,0" /> <!-- Click="Pause_click"/>-->
            <Button Content="Stop" FontSize="20" Height="40" Width="110" Margin="50,50,0,0" />
            <!--  Click="Stop_Click"/> -->
            <Button Content="Fast Forword" FontSize="20" Height="40" Width="110" Margin="50,50,0,0" />
            <!--  Click="Forword_Click"/> -->
            <Button Content="Rewind" FontSize="20" Height="40" Width="110" Margin="50,50,10,0"  />
            <!-- Click="Rewind_Click"/> -->
        </StackPanel>
    </Grid>
    
